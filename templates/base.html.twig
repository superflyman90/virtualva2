<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Bienvenue!{% endblock %}</title>
    {{ encore_entry_link_tags('app') }}
    {% block stylesheets %}{% endblock %}
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app') }}">Virt VA</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                    aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item active">
                            <a class="nav-link" aria-current="page" href="{{ path('app') }}">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                        </li>
                    </ul>
                    {% if app.user %}
                        <a href="{{ path('account') }}">Mon compte</a> | <a href="{{ path('app_logout') }}">DÃ©connexion</a>
                    {% else %}
                        <a href="{{ path('app_login') }}">Connexion</a> | <a href="{{ path('registration') }}">Inscription</a>
                    {% endif %}
                </div>
            </div>
        </nav>
    </header>
    {% block body %}{% endblock %}
    <!-- FOOTER -->
    <footer class="container">
        <p class="float-end"><a href="#">Back to top</a></p>
        <p>&copy; 2020-2021 Mani&Sami-Dev &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
    </footer>
    {{ encore_entry_script_tags('app') }}
    {% block javascripts %}{% endblock %}
</body>

</html>
</html>